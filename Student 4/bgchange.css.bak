
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Tangerine', serif;
    font-size: 35px;
    text-shadow: 4px 4px 4px #aaa;
}

section
{
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}
.bg
{
    position:absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #ff2323;
    transition: 0.5s;
    display: flex;

}
.selectColor
{
    position: absolute;
    padding: 10px;
    border: none;
    border-right: 10px solid #fff;
    outline: none;
    width: 200px;
    border-radius: 4px;
    box-shadow: 0 15px 25px rgba(0,0,0,0.1);
}

